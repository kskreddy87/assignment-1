#include<bits/stdc++.h> 
using namespace std; 
class Solution
{
public:
    int setKthBit(int N, int K)
    {
      int i;
	  int arr[100];// to store binary elements
	  for(i=0;N>0;i++)
       	{
		arr[i]=N%2;    
		N=N/2;		
        }

	  int sum=0;
	  for(i=i-1;i>=0;i--)
	  {
		if(i==K)
			arr[i]=1;
			sum=sum+(pow(2,i)*arr[i]);
	   }
	return sum;
    }
    
};
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        int N, K;
        cin >> N >> K;
        
        Solution ob;
        int ans = ob.setKthBit(N,K);
        cout << ans << endl;
    }
    return 0;
}
