/count the sub arrays where the sum is equal to  k
#include<bits/stdc++.h>
using namespace std;

int main() 
{
	int n=6,k=2;
	int arr[n]={1,2,1,2,1,3};
	int prefix[n];

	// reading values into prefix array
	prefix[0]=arr[0];
	for(int i=1;i<n;i++)
        {

            prefix[i]=prefix[i-1]+arr[i];

        }

	map<int,int>dic;
	int count=0;
	dic.insert({0,1});

	int r;
	for(auto i:prefix)
	{
	    r=i%k;

	    if(dic.find(r)!=dic.end())
	    {
	        count+=dic[r];
	    }
	    dic[r]+=1;
	}

	cout<<count;
return 0;
}
